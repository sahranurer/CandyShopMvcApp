@model Candy
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for candy shop" />
    </div>
    <div class="caption">
        <h3><a asp-controller="Candy" asp-action="Details" asp-route-id="@Model.CandyId">@Model.Name</a></h3>
        <h4 class="float-right">@Model.Price.ToString("c")</h4>

        <p>@Model.Description</p>
    </div>



</div>