@model IEnumerable<Category>

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown">Categories<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var item in Model)
        {
        <li>
            <a asp-controller="Candy" asp-action="List"
               asp-route-category="@item.CategoryName">@item.CategoryName</a>
        </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Candy" asp-action="List" asp-route-category="">View All Candy</a>
        </li>
    </ul>
</li>